{% extends 'base.html.twig' %}

{% block body %}
    <h1>Persona creation</h1>

    {{ form_start(form) }}
    {{ form_errors(form) }}

        <ul class="familiares" id="familiares" data-prototype="{{ form_widget(form.familiares.vars.prototype)|e('html_attr') }}">

        </ul>
    {{ form_widget(form) }}
        {{ form_widget(formEconomico) }}
        {{ form_widget(formDiscapacidad) }}
        {{ form_widget(formInstitucion) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('admin_persona_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

        var $collectionHolder;

        // setup an "add a tag" link
        var $addFamiliaresLink = $('<a href="#" class="add_familiares_link">Agregar Familiar</a>');
        var $newLinkLi = $('<li></li>').append($addFamiliaresLink);

        jQuery(document).ready(function() {
            // Get the ul that holds the collection of tags
            $collectionHolder = $('ul.familiares');
            console.log($collectionHolder);

            // add the "add a tag" anchor and li to the tags ul
            $collectionHolder.append($newLinkLi);

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            $collectionHolder.data('index', $collectionHolder.find(':input').length);

            $addFamiliaresLink.on('click', function(e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new tag form (see next code block)
                addFamiliaresForm($collectionHolder, $newLinkLi);
            });

            function addFamiliaresForm($collectionHolder, $newLinkLi) {
                // Get the data-prototype explained earlier
                var prototype = $collectionHolder.data('prototype');
                console.log(prototype);

                // get the new index
                var index = $collectionHolder.data('index');

                // Replace '__name__' in the prototype's HTML to
                // instead be a number based on how many items we have
                var newForm = prototype.replace(/__name__/g, index);

                // increase the index with one for the next item
                $collectionHolder.data('index', index + 1);

                // Display the form in the page in an li, before the "Add a tag" link li
                var $newFormLi = $('<li></li>').append(newForm);
                $newLinkLi.before($newFormLi);



                $newFormLi.append('<a href="#" class="remove-familiar">x</a>');

                $newLinkLi.before($newFormLi);

                // handle the removal, just for this example
                $('.remove-familiar').click(function(e) {
                    e.preventDefault();

                    $(this).parent().remove();

                    return false;
                });


            }


        });

    </script>
{% endblock %}
