{% extends 'admin.html.twig' %}

{% block page_title %}Mostrando Registro{% endblock %}
{% block page_subtitle %}{{ persona.primerNombre }} {{ persona.primerApellido }} {% endblock %}
{% block page_content %}


    <table id="tabla_personas" class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Primernombre</th>
                <td>{{ persona.primerNombre }}</td>
            </tr>
            <tr>
                <th>Segundonombre</th>
                <td>{{ persona.segundoNombre }}</td>
            </tr>
            <tr>
                <th>Primerapellido</th>
                <td>{{ persona.primerApellido }}</td>
            </tr>
            <tr>
                <th>Segundoapellido</th>
                <td>{{ persona.segundoApellido }}</td>
            </tr>
            <tr>
                <th>Cedulapasaporte</th>
                <td>{{ persona.cedulaPasaporte }}</td>
            </tr>
            <tr>
                <th>Fechanacimiento</th>
                <td>{% if persona.fechaNacimiento %}{{ persona.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Correoelectronico</th>
                <td>{{ persona.correoElectronico }}</td>
            </tr>
            <tr>
                <th>Direccionresidencia</th>
                <td>{{ persona.direccionResidencia }}</td>
            </tr>
            <tr>
                <th>Fecharegistro</th>
                <td>{% if persona.fechaRegistro %}{{ persona.fechaRegistro|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechaactualizacion</th>
                <td>{% if persona.fechaActualizacion %}{{ persona.fechaActualizacion|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Privadolibertad</th>
                <td>{% if persona.privadoLibertad %}Yes{% else %}No{% endif %}</td>
            </tr>

            <tr>
                <th>Id</th>
                <td>{{ persona.id }}</td>
            </tr>
        </tbody>
    </table>





            {{ form_start(delete_form) }}
    <a class="btn btn-default" href="{{ path('admin_persona_index') }}">Regresar al listado</a>


    <a class="btn btn-primary" href="{{ path('admin_persona_edit', { 'id': persona.id }) }}">Editar</a>
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}


{% endblock %}
