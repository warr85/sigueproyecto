{% extends 'admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/adminlte/plugins/datatables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block page_title %} Comunidades {% endblock %}
{% block page_subtitle %} Activas {% endblock %}

{% block page_content %}

<div class="box">
    <div class="box-header">

    </div>
    <!-- /.box-header -->
    <div class="box-body">

        <table id="tabla_ofertas" class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for seccionComunidad in seccionComunidads %}
            <tr>
                <td><a href="{{ path('admin_comunidad_show', { 'id': seccionComunidad.id }) }}">{{ seccionComunidad.id }}</a></td>
                <td>{{ seccionComunidad.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_comunidad_show', { 'id': seccionComunidad.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_comunidad_edit', { 'id': seccionComunidad.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>

    <ul>
        <li>
            <a href="{{ path('admin_comunidad_new') }}">Create a new seccionComunidad</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/adminlte/plugins/datatables/jquery.dataTables.min.js')}}"></script>
    <script src="{{ asset('bundles/adminlte/plugins/datatables/dataTables.bootstrap.min.js')}}"></script>
    <script>
        $('#tabla_ofertas').DataTable( {
            "language": {
                "lengthMenu": "Mostrar _MENU_ registros por página",
                "zeroRecords": "No existe esa persona - lo siento",
                "info": "Mostrando la página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay registros para mostrar",
                "infoFiltered": "(Buscando en los _MAX_ registros disponibles)",
                "search" : "Buscar:"
            }
        } );
    </script>
{% endblock %}
