{% extends 'admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/adminlte/plugins/datatables/dataTables.bootstrap.css') }}">
{% endblock %}

{% block page_title %} Comunidades por sección {% endblock %}
{% block page_subtitle %} dentro de los Núcleos {% endblock %}

{% block page_content %}
<div class="box">
    <div class="box-header">

    </div>
    <!-- /.box-header -->
    <div class="box-body">

    <table id="tabla_comunidades" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sección del Núcleo</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seccionComunidad in seccionComunidads %}
            <tr>
                <td><a href="{{ path('admin_comunidad_show', { 'id': seccionComunidad.id }) }}">{{ seccionComunidad.id }}</a></td>
                <td>{{ seccionComunidad.idSeccion }}</td>
                <td>{{ seccionComunidad.nombre }}</td>
                <td>
                    <a class="btn btn-xs btn-primary" href="{{ path('admin_comunidad_show', { 'id': seccionComunidad.id }) }}">Mostrar</a>
                    <a class="btn btn-xs btn-warning" href="{{ path('admin_comunidad_edit', { 'id': seccionComunidad.id }) }}">editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>

    <a href="{{ path('admin_comunidad_new') }}" class="btn btn-primary">Crear Nueva Comunidad</a>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/adminlte/plugins/datatables/jquery.dataTables.min.js')}}"></script>
    <script src="{{ asset('bundles/adminlte/plugins/datatables/dataTables.bootstrap.min.js')}}"></script>
    <script>
        $('#tabla_comunidades').DataTable( {
            "language": {
                "lengthMenu": "Mostrar _MENU_ registros por página",
                "zeroRecords": "No existe esa persona - lo siento",
                "info": "Mostrando la página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay registros para mostrar",
                "infoFiltered": "(Buscando en los _MAX_ registros disponibles)",
                "search" : "Buscar:"
            }
        } );
    </script>
{% endblock %}
